<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ch16_Test.TestImageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!--        지금 작업하는 라벨 뷰, 버튼, 이미지 결과 출력 뷰-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지 선택 후 출력하기"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/bmyeonsung_ttf"
            android:layout_gravity="center"
            android:background="@color/main_text_bgcolor"/>

<!--        카드뷰 사용 해보기-->
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="75dp"
            app:cardElevation="20dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/resultUserImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user_basic"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:id="@+id/galleryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="갤러리"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/cameraBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="카메라"
            android:textSize="30sp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>